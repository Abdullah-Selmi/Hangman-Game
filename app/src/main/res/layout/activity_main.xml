<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text="Hangman"
        android:textSize="20dp"
        android:textColor="@android:color/holo_orange_light"/>

    <ImageView
        android:id="@+id/i6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman6" />


    <ImageView
        android:id="@+id/i5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman5"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/i4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman4"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/i3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman3"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/i2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman2"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman1"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/i0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="30dp"
        android:src="@drawable/hangman0"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@id/i1"
        android:text="Guess The Animal Name"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@id/i1"
        android:textSize="15dp"
        android:textColor="@android:color/holo_red_light"/>

    <EditText
        android:id="@+id/ed1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/i1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:maxLength="1" />

    <TextView
        android:id="@+id/b1a"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/i1"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ed1"
        android:text="GUESS"
        android:textSize="15dp"
        android:background="@android:color/holo_purple"
        android:textColor="@android:color/black"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/b1"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/i1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/ed1"
        android:onClick="guess"
        android:text="GUESS"
        android:textSize="15dp"
        android:background="@android:color/holo_purple"/>

    <Button
        android:id="@+id/b2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@id/i1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/b1"
        android:onClick="New_Button"
        android:text="NEW"
        android:textSize="15dp"
        android:background="@android:color/holo_purple"/>

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b1"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:textSize="20dp"
        android:text="You have 6 guesses left"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/holo_red_light"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games Played : 0/15"
        android:textSize="20dp"
        android:layout_below="@id/t3"
        android:layout_marginLeft="155dp"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score : 0/15"
        android:textSize="20dp"
        android:layout_below="@id/t3"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"/>

</RelativeLayout>